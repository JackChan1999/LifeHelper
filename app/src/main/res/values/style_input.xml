<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="input_text_view" parent="input_text_base">
        <item name="android:textColor">@color/app_text_color_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="input_container_leave1">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/stroke_bg</item>
    </style>

    <style name="input_edit_text" parent="input_text_base">
        <item name="android:background">@null</item>
        <item name="android:layout_weight">100</item>
    </style>

    <style name="input_text_base">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="input_separator_vertical">
        <item name="android:background">@color/app_main_color</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="input_separator_horizontal">
        <item name="android:background">@color/app_main_color</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="input_container_leave2">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="input_fill_piece">
        <item name="android:background">@color/app_bg_color</item>
    </style>

    <style name="input_take_phpoto">
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
        <!--<item name="android:background">@android:color/holo_blue_light</item>-->
        <item name="android:gravity">center</item>
    </style>

    <style name="input_bn">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@color/blue_light</item>
        <item name="android:textColor">@color/app_text_color_light</item>
    </style>

    <style name="input_bn.delete">
        <item name="android:background">@color/orange_dark</item>
    </style>

    <style name="input_take_phpoto.text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/app_text_color_dark</item>
    </style>
</resources>