<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="poi">
        <item name="android:description">@string/life_helper</item>
    </style>

    <style name="poi.item">
        <item name="android:description">@string/life_helper</item>
    </style>

    <style name="poi.item.image">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="poi.item.title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/app_text_color_dark</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="poi.item.text">
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/app_text_color_grey</item>
    </style>

    <style name="poi.item.text.tel"></style>

    <style name="poi.item.text.address">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="poi.detail">
        <item name="android:description">@string/life_helper</item>
    </style>

    <style name="poi.detail.root">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/app_bg_color</item>
    </style>

    <style name="poi.detail.group_leave1">
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="poi.detail.group_leave1.common_info">
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="poi.detail.group_leave1.detial_groop">
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_marginTop">22dp</item>
    </style>

    <style name="poi.detail.image">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="poi.detail.title">
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/app_text_color_dark</item>
    </style>

    <style name="poi.detail.text">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/app_text_color_grey</item>
    </style>

    <style name="poi.detail.text.tel"></style>

    <style name="poi.detail.text.add"></style>

    <style name="poi.detail.text.detail"></style>

    <style name="poi.detail.underline">
        <item name="android:background">@color/app_bg_color</item>
    </style>

    <style name="poi.detail.detail_title">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/app_text_color_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>