<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="p2p">
        <item name="android:description">@string/life_helper</item>
    </style>

    <style name="p2p.item">
        <item name="android:description">@string/life_helper</item>
    </style>

    <style name="p2p.item.root">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="p2p.item.image">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="p2p.item.title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/app_text_color_dark</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="p2p.item.price">
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="p2p.item.text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/app_text_color_grey</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="p2p.item.text.tel">
        <item name="android:layout_marginLeft">25dp</item>
    </style>

    <style name="p2p.item.text.add"></style>

    <style name="p2p.detail">
        <item name="android:description">@string/life_helper</item>
    </style>

    <style name="p2p.detail.root">
        <item name="android:background">@color/white</item>
    </style>

    <style name="p2p.detail.image">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="p2p.detail.title">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/app_text_color_dark</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="p2p.detail.text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/app_text_color_grey</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="p2p.detail.text.add"></style>

    <style name="p2p.detail.text.tel">
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="p2p.detail.price">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="p2p.detail.underblock">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/app_bg_color</item>
    </style>

    <style name="p2p.detail.detail_title">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/app_text_color_dark</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="p2p.detail.detail_content">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/app_text_color_grey</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
</resources>