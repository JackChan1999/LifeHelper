<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="auth">
        <item name="android:description">@string/life_helper</item>
    </style>

    <style name="auth.group_leave1">
        <item name="android:gravity">center</item>
    </style>

    <style name="auth.root">
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="auth.et">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">26sp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <style name="auth.underline">
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@color/app_main_color_light</item>
    </style>

    <style name="auth.bn">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/app_text_color_dark</item>
        <item name="android:background">@color/app_bn</item>
    </style>
</resources>