<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/p2p.item.root">

    <ImageView
        android:id="@+id/p2p_image_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        style="@style/p2p.item.image" />

    <TextView
        android:id="@+id/p2p_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/p2p_image_iv"
        android:text="苹果MacBook笔记本电脑"
        style="@style/p2p.item.title" />

    <TextView
        android:id="@+id/p2p_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/p2p_image_iv"
        android:layout_below="@id/p2p_title_tv"
        android:text="3320元"
        style="@style/p2p.item.price" />

    <TextView
        android:id="@+id/p2p_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/p2p_image_iv"
        android:layout_below="@id/p2p_price_tv"
        android:text="位置：上海"
        style="@style/p2p.item.text.add" />

    <TextView
        android:id="@+id/p2p_tel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/p2p_price_tv"
        android:layout_toRightOf="@id/p2p_address_tv"
        android:text="电话：18222919444"
        style="@style/p2p.item.text.tel" />

</RelativeLayout>