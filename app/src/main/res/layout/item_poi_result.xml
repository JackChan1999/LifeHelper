<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/poi_iv"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        style="@style/poi.item.image" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/poi_iv"
        android:layout_toRightOf="@id/poi_iv"
        android:text="井山湖农庄"
        style="@style/poi.item.title" />

    <TextView
        android:id="@+id/tel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/poi_iv"
        android:layout_below="@id/title_tv"
        android:layout_toRightOf="@id/poi_iv"
        android:text="tel:57780881"
        style="@style/poi.item.text.tel" />

    <TextView
        android:id="@+id/address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tel_tv"
        android:layout_toRightOf="@id/poi_iv"
        android:text="add:杭州市滨江区长河街道唐子沿江农……"
        style="@style/poi.item.text.address" />
</RelativeLayout>